{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "es2017",
      "esnext",
      "dom"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "paths": {
      "ui/*": [
        "./ui/*"
      ],
      "app": [
        "./app"
      ],
      "util": [
        "./util"
      ],
      "utils": [
        "./utils"
      ],
      "test": [
        "./test"
      ],
      "config/*": [
        "./app/config/*"
      ]
    },
    "sourceMap": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2017",
    "typeRoots": [
      "./node_modules/@types",
      "./dts"
    ],
    "skipLibCheck": true
  },
  "include": [
    "./app",
    "./ui",
    "./test",
    "./unit-test",
    "./dts",
    "./bin",
    "./util",
    "./utils",
    "./shim",
    "./node_modules/@types",
    "./node_modules/@storybook"
  ],
  "exclude": [
    "./node_modules",
    "./bin/lib/template/*"
  ]
}
