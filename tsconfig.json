{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowUnreachableCode": false,
    "baseUrl": ".",
    "declaration": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": ["es2015", "es2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "paths": {
      "src": ["./src"],
      "test": ["./test"]
    },
    "sourceMap": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "strictNullChecks": true,
    "target": "es5",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "node_modules",
    "!node_modules/@types"
  ]
}
