{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "baseUrl": "./src",
    "declaration": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": ["es2015", "es2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "strictNullChecks": true,
    "target": "es5"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
