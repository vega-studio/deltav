{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "baseUrl": "src",
    "declaration": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["es2017", "dom", "dom.iterable", "scripthost"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strictNullChecks": false,
    "target": "es5"
  },
  "files": [
    "src/index.ts",
    "test/index.ts"
  ]
}
