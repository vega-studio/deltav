{
  "rules": {
    "ban-types": [true, ["Number"], ["Object"], ["String"]],
    "no-magic-numbers": [false],
    "no-console": [true, "log"],
    "curly": [true, "ignore-same-line"],
    "no-arg": true,
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-empty": true,
    "no-eval": true,
    "no-misused-new": true,
    "no-string-literal": true,
    "no-string-throw": true,
    "no-this-assignment": true,
    "no-unsafe-finally": true,
    "no-var-keyword": true,
    "triple-equals": [true],
    "use-isnan": true,
    "eofline": true,
    "indent": [true, "spaces", 2],
    "linebreak-style": [true, "LF"],
    "prefer-const": [true, {"destructuring": "all"}],
    "object-literal-sort-keys": false,
    "array-type": [true, "array"],
    "arrow-return-shorthand": [true, "multiline"],
    "class-name": true,
    "comment-format": [true, "check-space"],
    "encoding": true,
    "interface-name": [true, "always-prefix"],
    "new-parens": true,
    "no-angle-bracket-type-assertion": true,
    "no-consecutive-blank-lines": true,
    "no-irregular-whitespace": true,
    "no-trailing-whitespace": true,
    "no-unnecessary-callback-wrapper": true,
    "object-literal-key-quotes": [false, "consistent-as-needed"],
    "ordered-imports": [true],
    "prefer-method-signature": true,
    "prefer-template": true,
    "semicolon": [true, "always", "ignore-bound-class-methods"],
    "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-module", "check-separator", "check-type", "check-typecast"]
  },
  "linterOptions": {
    "exclude": [
      "src/util/normalize-wheel/*.js"
    ]
  }
}
